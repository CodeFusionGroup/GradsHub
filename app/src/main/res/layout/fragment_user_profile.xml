<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".messaging.searchableUsers.UserProfileFragment">


    <TextView
        android:id="@+id/userProfileNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="user profile name"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/startChatBtn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userProfileNameTV"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/register_rounded_button"
        android:textColor="@color/colorWhite"
        android:text="START CHAT"/>


</RelativeLayout>