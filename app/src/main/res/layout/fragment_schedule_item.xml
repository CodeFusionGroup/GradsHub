<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xml:card_views="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/eventContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Machine Learning"
            android:textAppearance="?attr/textAppearanceListItem"/>


        <TextView
            android:id="@+id/deadlineTV"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTV"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"

            android:text="deadline: 2020-07-31 23:59:59" />


        <TextView
            android:id="@+id/timezoneTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deadlineTV"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="timezone: UTC-11" />


        <TextView
            android:id="@+id/dateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timezoneTV"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="date: November 25-28, 2020" />


        <TextView
            android:id="@+id/placeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTV"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="place: Fukuoka, Japan" />


        <TextView
            android:id="@+id/starCountTV"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/placeTV"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:text="100000"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_fav_filled"
            android:drawableStart="@drawable/ic_fav_filled"/>


        <ImageButton
            android:id="@+id/favouriteBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/titleTV"
            android:layout_toEndOf="@id/titleTV"
            android:background="@null"
            android:contentDescription="favourite"
            android:src="@drawable/ic_fav_stroke" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>