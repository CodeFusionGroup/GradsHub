<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xml:card_views="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/groupListNoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignBaseline="@id/groupNameTV"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp" />

        <TextView
            android:id="@+id/groupNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/groupListNoTV"
            android:layout_toRightOf="@id/groupListNoTV"
            android:layout_toStartOf="@id/groupVisibilityTV"
            android:layout_toLeftOf="@id/groupVisibilityTV"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/groupVisibilityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignBaseline="@id/groupNameTV"
            android:textStyle="italic"
             />

    </RelativeLayout>

</androidx.cardview.widget.CardView>