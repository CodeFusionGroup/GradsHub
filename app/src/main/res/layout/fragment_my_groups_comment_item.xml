<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp" >


    <TextView
        android:id="@+id/commentDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="2020-05-26"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/commentCreatorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentDateTV"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textStyle="bold"
        android:text="Kamo Kamo"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/commentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentCreatorTV"
        android:layout_marginTop="4dp"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_rectangle"
        android:textColor="#ffffff"
        android:text="some interesting comment."
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />


</RelativeLayout>